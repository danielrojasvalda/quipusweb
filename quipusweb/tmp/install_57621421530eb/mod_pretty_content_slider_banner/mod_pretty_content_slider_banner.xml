	<authorEmail>admin@joombig.com</authorEmail> 
	<authorUrl>http://www.joombig.com</authorUrl> 
	<version>1.1</version> 
	  <description>PRETTY_CONTENT_SLIDER_BANNER_DESC</description>

	<files>
		<filename module="mod_pretty_content_slider_banner">mod_pretty_content_slider_banner.php</filename>
		<filename>index.html</filename>
		<filename>mod_pretty_content_slider_banner.xml</filename>
		<folder>language</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>tmpl</folder>
		<folder>elements/</folder>
		<folder>assets/</folder>
	</files>
	
	<languages>
		<language tag="en-GB">language/en-GB.mod_pretty_content_slider_banner.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/modules/mod_pretty_content_slider_banner/elements">
			<fieldset name="basic">
				<field type="loader" />
				<field name="enable_jQuery" type="radio" default="1" label="Enable/Disable jQuery" description="Select Enable/Disable">
					<option value="1">Enable</option>
					<option value="0">Disable</option>
				</field>
				<field name="moduleWidth" type="text" default="100%" label="Width of module(%)" description="Width of module(%)" />
				<field name="moduleHeight" type="text" default="300" label="Height of module" description="Without px" />
				<field name="modulestyle" type="list" default="0" label="Style" description="Select style">
					<option value="0">Style 1</option>
					<option value="1">Style 2</option>
					<option value="2">Style 3</option>
				</field>
				<field name="enable_border" type="list" default="1" label="Enable/Disable Border module" description="Select Enable/Disable">
					<option value="1">Enable</option>
					<option value="0">Disable</option>
				</field>
				<field name="autoplay" type="list" default="1" label="Autoplay" description="Select Yes/No">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field name="timespeed" type="text" default="3000" label="Time speed" description="Input time speed of slide" />
				<field name="background_color_title" type="hotcolor" default="#222" label="Color title box" description="Background color of Title box" />
				<field name="boder_color_title" type="hotcolor" default="#000" label="Color boder title box" description="Color border of Title box" />
				<field name="color_title" type="hotcolor" default="#ffffff" label="Title color" description="Color of Title" />
				<field name="font_size_title" type="text" default="20" label="Font size title" description="Font size of title without px" />
				<field name="background_color_des" type="hotcolor" default="#222" label="Color Description box" description="Background color of Description box" />
				<field name="boder_color_des" type="hotcolor" default="#000" label="Color boder Description box" description="Color border of Description box" />
				<field name="color_desshort" type="hotcolor" default="#ffffff" label="DesShort color" description="Color of DesShort" />
				<field name="font_size_desshort" type="text" default="30" label="Font size DesShort" description="Font size of DesShort without px" />
				<field name="color_deslong" type="hotcolor" default="#ffffff" label="DesLong color" description="Color of DesLong" />
				<field name="font_size_deslong" type="text" default="14" label="Font size DesLong" description="Font size of DesLong without px" />
			</fieldset>
			<fieldset name="image1" label="LABEL IMAGE1">
				<field name="NameItem1" type="text" default="" label="LABEL HEADING" description="DESC HEADING" />
				<field name="image1" type="media" default="" label="LABEL IMAGE" description="DESC IMAGE" />
				<field name="DesShort1" type="text" default="" label="LABEL DES SHORT" description="DESC DES SHORT" />
				<field name="DesLong1" type="text" default="" label="LABEL DES LONG" description="DESC DES LONG" />
				<field name="LinkDetail1" type="text" default="" label="LABEL LINK DETAI" description="DESC LINK DETAI" />
				<field name="readmore1" type="text" default="Read more" label="Read more text" description="Read more text" />
			</fieldset>
			<fieldset name="image2" label="LABEL IMAGE2">
				<field name="NameItem2" type="text" default="" label="LABEL HEADING" description="DESC HEADING" />
				<field name="image2" type="media" default="" label="LABEL IMAGE" description="DESC IMAGE" />
				<field name="DesShort2" type="text" default="" label="LABEL DES SHORT" description="DESC DES SHORT" />
				<field name="DesLong2" type="text" default="" label="LABEL DES LONG" description="DESC DES LONG" />
				<field name="LinkDetail2" type="text" default="" label="LABEL LINK DETAI" description="DESC LINK DETAI" />
				<field name="readmore2" type="text" default="Read more" label="Read more text" description="Read more text" />
			</fieldset>
			<fieldset name="image3" label="LABEL IMAGE3">
				<field name="NameItem3" type="text" default="" label="LABEL HEADING" description="DESC HEADING" />
				<field name="image3" type="media" default="" label="LABEL IMAGE" description="DESC IMAGE" />
				<field name="DesShort3" type="text" default="" label="LABEL DES SHORT" description="DESC DES SHORT" />
				<field name="DesLong3" type="text" default="" label="LABEL DES LONG" description="DESC DES LONG" />
				<field name="LinkDetail3" type="text" default="" label="LABEL LINK DETAI" description="DESC LINK DETAI" />
				<field name="readmore3" type="text" default="Read more" label="Read more text" description="Read more text" />
			</fieldset>
			<fieldset name="image4" label="LABEL IMAGE4">
				<field name="NameItem4" type="text" default="" label="LABEL HEADING" description="DESC HEADING" />
				<field name="image4" type="media" default="" label="LABEL IMAGE" description="DESC IMAGE" />
				<field name="DesShort4" type="text" default="" label="LABEL DES SHORT" description="DESC DES SHORT" />
				<field name="DesLong4" type="text" default="" label="LABEL DES LONG" description="DESC DES LONG" />
				<field name="LinkDetail4" type="text" default="" label="LABEL LINK DETAI" description="DESC LINK DETAI" />
				<field name="readmore4" type="text" default="Read more" label="Read more text" description="Read more text" />
			</fieldset>
			<fieldset name="image5" label="LABEL IMAGE5">
				<field name="NameItem5" type="text" default="" label="LABEL HEADING" description="DESC HEADING" />
				<field name="image5" type="media" default="" label="LABEL IMAGE" description="DESC IMAGE" />
				<field name="DesShort5" type="text" default="" label="LABEL DES SHORT" description="DESC DES SHORT" />
				<field name="DesLong5" type="text" default="" label="LABEL DES LONG" description="DESC DES LONG" />
				<field name="LinkDetail5" type="text" default="" label="LABEL LINK DETAI" description="DESC LINK DETAI" />
				<field name="readmore5" type="text" default="Read more" label="Read more text" description="Read more text" />
			</fieldset>
		</fields>
	</config>
</extension>
