<?xml version="1.0" encoding="utf-8"?>
<extension
	  type="module"
	  version="1.1"
	  client="site"
	  method="upgrade">
	<name>Pretty Content Slider Banner</name> 
	<author>joombig.com</author> 
	<creationDate>2013-12-20</creationDate> 
